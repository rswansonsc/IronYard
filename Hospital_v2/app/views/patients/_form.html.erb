<%= form_for [@hospital,@patient] do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :workflow_state %><br>
    <%= f.text_field :workflow_state %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
